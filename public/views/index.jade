    section.navbar-fixed-bottom.bitsplitbetnav
      .bigcounter
        span.countertop
          .text-center#nextRoundTitle Next Round
          #nextRoundTime.text-center
      .row
        .pull-left.clearfix.col-md-3.col-lg-3.bit.bitbank
